[Unit]
Description=FastAPI backend for Valentis
After=network.target

[Service]
User=root
Group=www-data
WorkingDirectory=/var/www/valentis/backend
Environment="PATH=/var/www/valentis/backend/venv/bin"
ExecStart=/var/www/valentis/backend/venv/bin/gunicorn -w 4 -k uvicorn.workers.UvicornWorker app.main:app --bind 0.0.0.0:8000

[Install]
WantedBy=multi-user.target
